<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">bulksolutions_form.bulksolutions_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Bulk Solutions</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Salecto\DataIntegrity\Block\Adminhtml\Issues\BulkSolutions\ApplyButton"/>
            <button name="back" class="Salecto\DataIntegrity\Block\Adminhtml\Issues\BulkSolutions\BackButton"/>
        </buttons>
        <namespace>salecto_bulksolutions_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>bulksolutions_form.bulksolutions_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="bulksolutions_form_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="data_integrity/issues/bulksolutionsapply"/>
        </settings>
        <dataProvider class="Salecto\DataIntegrity\Model\BulkSolutions\DataProvider"
                      name="bulksolutions_form_data_source">
            <settings>
                <requestFieldName>issue_id</requestFieldName>
                <primaryFieldName>issue_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="bulksolutions_fieldset" class="Salecto\DataIntegrity\Ui\Component\Form\Fieldset\BulkSolutions">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Solution Selection</item>
                <item name="sortOrder" xsi:type="number">1</item>
            </item>
        </argument>
    </fieldset>
</form>
